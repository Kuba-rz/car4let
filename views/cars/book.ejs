<% layout ('partials/boilerplate.ejs') %>
    <div class="row">
        <div class="col-lg-6">
            <img src="<%=car.carImages[0].url%>" alt="" class="img-fluid">
        </div>
        <div class="col-lg-6">
            <form action='/user/login' method='POST' novalidate class='needs-validation'>
                <div class="row d-flex justify-content-center">
                    <div class="col-lg-8">
                        <div class="mb-3">
                            <label for="bookFrom" class="form-label">Book from:</label>
                            <input required type="date" name='bookFrom' class="form-control" id="bookFrom">
                        </div>
                    </div>


                    <div class="col-lg-8">
                        <div class="mb-3">
                            <label for="bookUntil" class="form-label">Book until:</label>
                            <input type='date' class='form-control' name="bookUntil" id="bookUntil" required>
                        </div>
                    </div>
                </div>

                <div class="row d-flex justify-content-center">
                    <button type="submit" class="mb-3 btn">Book</button>
                </div>
        </div>
        </form>
    </div>
    </div>