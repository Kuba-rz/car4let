<% layout ('partials/boilerplate.ejs') %>

    <div class="mb-5 row justify-content-center">
        <div class="col-lg-10">
            <h1 class="text-center display-3">Booking for <%=car.name%>
            </h1>
        </div>
    </div>

    <div class="row justify-content-center">

        <div class="col-lg-8">
            <form action='/book/<%=car.id%>' method='POST' novalidate class='needs-validation'>
                <div class="row d-flex justify-content-center">
                    <div class="col-lg-8">
                        <div class="mb-3">
                            <label for="bookedFrom" class="form-label">Book from:</label>
                            <input required type="date" name='bookedFrom' class="form-control" id="bookedFrom">
                        </div>
                    </div>


                    <div class="col-lg-8">
                        <div class="mb-3">
                            <label for="bookedUntil" class="form-label">Book until:</label>
                            <input type='date' class='form-control' name="bookedUntil" id="bookedUntil" required>
                        </div>
                    </div>
                </div>

                <div class="row d-flex justify-content-center">
                    <button id='book-submit' type="submit" class="mb-3 btn">Book</button>
                </div>
        </div>
        </form>
    </div>
    </div>